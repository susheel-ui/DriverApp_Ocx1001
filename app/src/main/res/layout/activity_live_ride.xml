<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ—º MAP -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- INFO -->
    <TextView
        android:id="@+id/txtRideInfo"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- ðŸ“ž CALL USER -->
    <Button
        android:id="@+id/btnCallUser"
        android:text="Call User"
        android:textAllCaps="false"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- NAVIGATION & TRIP FLOW -->
    <Button
        android:id="@+id/btnNavigatePickup"
        android:text="Navigate to Pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnStartTrip"
        android:text="START TRIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnNavigateDrop"
        android:text="Navigate to Drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnEndTrip"
        android:text="END TRIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
